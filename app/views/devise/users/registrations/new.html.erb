<div class="resistration-new container">
  <div class="row">
    <div class="col-lg-12">
      <h2>新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label "ニックネーム" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", size: 30 %>
        </div>

        <div class="field">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 40 %>
        </div>

        <div class="field">
          <%= f.label "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label "パスワード(確認用)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="devise-link actions">
          <%= f.submit "新規登録", class: "btn btn-outline-primary btn-lg" %>
        </div>
      <% end %>
      <div calss="devise-link">
        <%= render "devise/users/shared/links" %>
      </div>
    </div>
  </div>
</div>
