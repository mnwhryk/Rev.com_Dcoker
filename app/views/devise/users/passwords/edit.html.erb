<div class="container">
  <div class="row">
    <div class="password-change col-lg-12">
      <h2>パスワードを変更</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/users/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.label :password, "新しいパスワード" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "新しいパスワード(確認用)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "パスワードを変更する", class: "btn btn-outline-secondary btn-lg" %>
        </div>
      <% end %>
      <div class="devise-link">
        <%= render "devise/users/shared/links" %>
      </div>
    </div>
  </div>
</div>