<div class="container">
  <div class="row">
    <div class="password-change col-lg-12">
      <h2>パスワードをお忘れですか？</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 40 %>
        </div>

        <div class="actions">
          <%= f.submit "パスワードのリセット手順を送る", class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
      <div class="devise-link">
        <%= render "devise/users/shared/links" %>
      </div>
    </div>
  </div>
</div>