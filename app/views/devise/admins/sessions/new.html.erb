<div class="container">
  <div class="row">
    <div class="session-new col-lg-12">
      <h2>ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 40 %>
        </div>

        <div class="field">
          <%= f.label "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label "記憶しておく" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-outline-primary btn-lg" %>
        </div>
      <% end %>
      <div class="field">
        <%= render "devise/admins/sessions/testuser" %>
      </div>
      <div class="devise-link">
        <%= render "devise/admins/shared/links" %>
      </div>
    </div>
  </div>
</div>