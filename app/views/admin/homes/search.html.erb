<div class="container">
  <div class="row">
    <div class="col-lg-12">
        <h2>コミック検索</h2>
        <!--コミック一覧-->
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>カテゴリー</th>
              <th>タイトル</th>
              <th>作者</th>
              <th>出版社</th>
            </tr>
          </thead>
          <tbody>
            <% @comics.each do |comic| %>
              <tr>
                <td>
                  <%= link_to admin_comic_path(comic.isbn) do %>
                    <%= image_tag comic.image_url, size: "44x60" %>
                  <% end %>
                </td>
                <td><%= comic.category.name %></td>
                <td>
                  <%= link_to admin_comic_path(comic.isbn) do %>
                    <%= comic.title %>
                  <% end %>
                </td>
                <td><%= comic.author %></td>
                <td><%= comic.publisher %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>