<div class="container">
  <div class="row">
    <!-- カテゴリーの新規登録フォーム -->
    <div class="col-lg-4">
      <%= form_with model: @category, url: admin_categories_path, method: :post, local: true do |f| %>
         <div class="category-title">
           <%= f.label "カテゴリー登録" %>
         </div>
         <div style="font-size: 20px;">
           <%= render "layouts/error_messages", model: @category %>
         </div>
         <div>
           <%= f.text_field :name, placeholder: "ここに入力", class: "form-control" %>
         </div>
         <div class="form-btn">
           <%= f.submit "登録する", class: "btn btn-outline-secondary btn-lg ml-3 mt-3" %>
         </div>
      <% end %>
    </div>
    <div class="col-lg-2"></div>
    <!-- カテゴリー一覧表示 -->
    <div class="col-lg-6">
      <p class="category-index-title">カテゴリー一覧</p>
      <table class="table">
        <thead>
          <tr>
            <th>カテゴリー名</th>
            <th class=""></th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td>
                <%= category.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_category_path(category.id), class: "btn btn-outline-secondary" %>
              </td>
            </tr>
          <% end %>
        </tbody>

        <tfoot>
        </tfoot>
      </table>
    </div>

  </div>
</div>