<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h4 class="text-center">カテゴリー編集</h4>
      <div style="font-size: 20px;">
        <%= render "layouts/error_messages", model: @category %>
      </div>

      <!--編集フォーム-->
      <%= form_with model: @category, url: admin_category_path(@category.id), local: true do |f| %>
        <table class="table">
          <tr class="category-table-box">
            <th><%= f.label "カテゴリー名" %></th>
            <td><%= f.text_field :name, class: "form-control", :size => "70x2" %></td>
          </tr>
        </table>
        <div class="text-center">
          <%= f.submit "更新する", class: "btn btn-outline-secondary btn-lg" %>
        </div>
      <% end %>

    </div>
  </div>
  <div class="row">
    <div class="col-lg-10 text-center">
      <%= link_to admin_categories_path do %>
        <p class="category-path">カテゴリー登録  /  一覧</p>
      <% end %>
    </div>
  </div>
</div>