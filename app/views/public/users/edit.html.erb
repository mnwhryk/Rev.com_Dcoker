<div class="container">
  <div class="row">
    <h4 class="col-lg-12">プロフィール編集</h4>
    <!--エラーメッセージ-->
    <div style="font-size: 20px;">
      <%= render "layouts/error_messages", model: @user %>
    </div>
    <div class="col-lg-12">
      <!--マイページ編集フォーム-->
      <%= form_with model: @user, url: user_path, method: :patch, local: true do |f| %>
        <!--ユーザーイメージ-->
        <div class="user-img-edit">
          <%= f.attachment_field :profile_image %>
        </div>
        <!--ユーザーニックネーム-->
        <div>
          <p><%= f.label "ニックネーム" %></p>
          <p><%= f.text_field :name, class: "form-control", size: 20 %></p>
        </div>
        <!--メールアドレス-->
        <div>
          <p><%= f.label "メールアドレス" %></p>
          <p><%= f.text_field :email, class: "form-control", size: 40 %></p>
        </div>
        <!--自己紹介-->
        <div>
          <p><%= f.label "自己紹介" %></p>
          <p><%= f.text_area :introduction, class: "form-control", :size => "80x4" %></p>
        </div>
        <!--更新ボタン-->
        <div class="user-btn">
          <%= f.submit "更新する", class: "btn btn-outline-secondary btn-lg" %>
        </div>
      <% end %>
      <div class="unsub-path">
        <%= link_to "退会画面", user_unsubscribe_path(current_user.id), class: "btn btn-outline-danger" %>
      </div>
    </div>
  </div>
</div>