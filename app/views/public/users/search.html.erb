<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <% if @user_or_comic == "1" %>

        <h2>ユーザー検索</h2>
        <table>
          <thead>
            <tr>
              <th>アイコン</th>
              <th>ユーザーニックネーム</th>
            </tr>
          </thead>
          <% @users.each do |user| %>
            <tbody>
              <tr>
                <td>
                  <%= link_to user_path(user) do %>
                    <%= attachment_image_tag user, :profile_image, size: "50x50", format: 'jpg', fallback: "no_image.jpg", class: "rounded-circle" %>
                  <% end %>
                </td>
                  <th>
                    <%= link_to user_path(user) do %>
                      <%= user.name %>
                    <% end %>
                  </th>
              </tr>
            </tbody>
          <% end %>
        </table>

      <% elsif @user_or_comic == "2" %>

        <h2>コミック検索</h2>
        <!--コミック一覧-->
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>カテゴリー</th>
              <th>タイトル</th>
              <th>作者</th>
              <th>出版社</th>
            </tr>
          </thead>
          <tbody>
            <% @comics.each do |comic| %>
              <tr>
                <td>
                  <%= link_to comic_path(comic.isbn) do %>
                    <%= image_tag comic.image_url, size: "44x60" %>
                  <% end %>
                </td>
                <td><%= comic.category.name %></td>
                <td>
                  <%= link_to comic_path(comic.isbn) do %>
                    <%= comic.title %>
                  <% end %>
                </td>
                <td><%= comic.author %></td>
                <td><%= comic.publisher %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      <% else %>
      <% end %>

    </div>
  </div>
</div>