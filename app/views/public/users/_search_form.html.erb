
  <%= form_with url: user_search_path, :method => 'get', local: true do  |f| %>
    <%= f.select(:option, options_for_select([["ユーザー", "1"],["コミック","2"]])) %>
    <%= f.select(:choice, options_for_select([["キーワード", "1"],["後方一致", "2"],["前方一致", "3"],["完全一致", "4"]])) %>
    <%= f.text_field :search, size: 50, placeholder: "気になるコミック、ユーザーを探そう！" %>
    <%= f.submit "検索", :name => nil, class: "btn btn-outline-secondary btn-sm" %>
  <% end %>